			}
			return null;
		}
		
		@Override
		protected void onPostExecute(Exception result) {
			// TODO Auto-generated method stub
			super.onPostExecute(result);
			if(result==null)
			{
				
			}
			progress.setVisibility(ProgressBar.GONE);
		}
			
    }
    
